<form action="/private/fridge/add"
  method="POST">
  <label for="ingredient">Ingredients</label>
  <input type="text"
    name="ingredient">
  <button type="submit">Add</button>
</form>

<div class="fridge">
  <ul>
    <form action="/private/fridge/remove"
      method="POST">
      {{#each ingredients}}
      <input type="checkbox"
        value="{{this}}"
        name="ingredient">
      <label for="ingredient">{{this}}</label>
      {{/each}}
      <button type="submit">remove</button>
    </form>
  </ul>
</div>