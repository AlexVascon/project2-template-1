{{! DISPLAY ALL SAVED RECIPES }}
<ul class="recipe-view">
  <div class="columns is-multiline is-centered">
    {{#each user.recipes}}
      <div class="column is-one-quarter mx-1">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <img src="{{this.image}}" alt="Placeholder image" />
            </figure>
          </div>
          <div class="card-content">
            <a
              class="button is-link"
              href="/private/fridge/remove/recipe/{{this._id}}"
            >
              Remove
            </a>
            <span class="ml-2">
              <span class="title is-4">{{this.title}}</span>
            </span>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</ul>

