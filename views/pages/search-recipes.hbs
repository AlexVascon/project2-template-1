<div id="search-bar-container"
  class="wrap">
  <h2 id="search-heading">What The Fridge!</h2>
  <img id="fridge-backdrop"
    src="/images/fridge.png"
    alt="">

  <form action="/search/ingredients"
    method="POST">


    <div class="search">
      <input type="text"
        class="searchTerm"
        name="ingredients"
        placeholder="What are you looking for?">
      <button type="submit"
        class="searchButton">
        <i class="fa fa-search"></i>
      </button>
    </div>
    <div class="ingredient-container-wrap">
      <div class="ingredient-container">
        {{#each user.ingredients}}
        <input type="checkbox"
          id="contactChoice3"
          name="ingredients"
          value="{{this}}">
        <label for="contactChoice3">{{this}}</label>
        {{/each }}

      </div>
    </div>
  </form>
</div>


