    src="/images/fridge.png"
    alt="">

  <form action="/search/ingredients"
    method="POST">


    <div class="search">
      <input type="text"
        class="searchTerm"
        name="ingredients"
        placeholder="What are you looking for?">
      <button type="submit"
        class="searchButton">
        <i class="fa fa-search"></i>
      </button>
    </div>
    {{!-- checkbox area --}}

    <div class="ingredient-container-wrap">
      {{!-- <div class="ingredient-container"> --}}
        <div class="container">
          <ul class="ks-cboxtags">
            {{#each user.ingredients}}
            <li> <input type="checkbox"
                id="01"
                name="ingredients"
                value="{{this}}">
              <label for="01">{{this}}</label>
            </li>
            {{/each }}
          </ul>
        </div>
      </div>
  </form>
</div>




